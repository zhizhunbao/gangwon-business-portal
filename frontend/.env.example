# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# Mock Configuration (disabled by default - use real backend API)
# Set to 'true' only if you need to test without backend
VITE_USE_MOCK=false

# Feature Flags
VITE_ENABLE_ANALYTICS=false

# File Upload Configuration
VITE_MAX_IMAGE_SIZE=5242880    # 5MB for images
VITE_MAX_DOCUMENT_SIZE=10485760  # 10MB for documents
VITE_ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
VITE_ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,xls,xlsx,ppt,pptx,txt

